@macro altr{LINK, TXT, TLINK, TRAIL}
@ifhtml
@ref{\LINK\,,\TXT\}\TRAIL\
@end ifhtml
@ifinfo
@pxref{\LINK\,\TXT\}\TRAIL\
@end ifinfo
@iftex
@ref{\TLINK\}\TRAIL\
@end iftex
@ifdocbook
@ref{\TLINK\}\TRAIL\
@end ifdocbook
@end macro

@macro img{FILE, ALIGN}
@ifhtml
@html
<img src="img/\FILE\.png" class="float\ALIGN\"/>
@end html
@end ifhtml
@ifdocbook
@image{img/\FILE\,,,,.png}
@end ifdocbook
@end macro

